#
# bspwm hotkeys
#

#Kill current node
alt + shift + q
	bspc node -k

#Cycle desktops
alt + {1,2,3,4,5,6,7,8,9,0}
	bspc desktop -f {1,2,3,4,5,6,7,8,9,0}

#Send to desktop
alt + shift + {1,2,3,4,5,6,7,8,9,0}
	bspc node -d {1,2,3,4,5,6,7,8,9,0}

#Toggle floating for a node
alt + shift + space
	bspc node -t ~floating

#Move node
alt + shift + {Left,Down,Up,Right}
	bspc node -s {left,down,up,right}

#Move focus
alt + {Left,Down,Up,Right}
	bspc node -f {left,down,up,right} || bspc monitor -f last

#Set focus to pointer
#~button1
#	bspc pointer -g focus

#Resize
alt + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}


#New urxvt terminal
alt + shift + T
	termite

# Media keys
XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86MonBrightness{Up,Down}
	backlight {+,-}5%
alt + .
	mpc next
alt + ,
	mpc prev

#Projecter key
F4
	xrandr --output HDMI1 --set "Broadcast RGB" "Full" --mode 1920x1080

#Manually lock computer
alt + l
	i3lock-fancy -g

# make sxhkd reload its configuration files:
alt + shift + r
	pkill -USR1 -x sxhkd

#Screenshot 
Print
	scrot ~/Pictures/Screenshots/%b%d::%H%M%S.png

#Rofi change windows
alt + Tab
	rofi -show window -width 2560 -location 0 -lines 19 -bw 0 -font "Source Code Pro 12" -padding 770 -separator-style solid

#Rofi run
alt + r
	rofi -show run -width 2560 -location 0 -lines 19 -bw 0 -font "Source Code Pro 12" -padding 770 -separator-style solid

# Lock node
alt + shift + p
	bspc window -t private

# Lock a window from closing
alt + Escape
	bspc window -t locked 
2
w
