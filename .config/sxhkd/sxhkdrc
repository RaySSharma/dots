#
# bspwm hotkeys
#

#Kill current node
alt + shift + q
	bspc node -k

#Cycle desktops
alt + {1,2,3,4,5,6,7,8,9,0}
	bspc desktop -f {1,2,3,4,5,6,7,8,9,0}

#Send to desktop
alt + shift + {1,2,3,4,5,6,7,8,9,0}
	bspc node -d {1,2,3,4,5,6,7,8,9,0}

#Toggle floating for a node
alt + shift + space
	bspc node -t ~floating

#Move node
alt + shift + {Left,Right}
	bspc node -s {prev,next}

#Move focus
alt + {Left,Right}
	bspc node -f {prev,next} || bspc monitor -f last

#New terminal
alt + shift + T
	termite
	xdotool search --class cairo-dock windowraise %@

#New file explorer
alt + shift + F
	thunar
#Resizing floating windows
win + !button{1-3}
    bspc pointer -t %i %i

# Media keys
XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86MonBrightness{Up,Down}
	backlight {+,-}5%
alt + .
	mpc next
alt + ,
	mpc prev

#Projecter key
F4
	xrandr --output HDMI1 --set "Broadcast RGB" "Full" --mode 1920x1080

#Manually lock computer
alt + l
	exec /home/ray/.config/i3lock-fancier/lockscreen.sh

# make sxhkd reload its configuration files:
alt + shift + r
	pkill -USR1 -x sxhkd

#Screenshot 
Print
	scrot ~/Pictures/Screenshots/%b%d::%H%M%S.png

#Rofi change windows
alt + Tab
	rofi -modi window,ssh,run,drun -show window -width 2560 -yoffset 25 -location 1 -lines 10 -bw 0 -font "Source Code Pro 8" -padding 770 -separator-style solid

#Rofi run
alt + r
	rofi -modi window,ssh,run,drun -show drun -width 200 -yoffset 25 -location 1 -lines 10 -bw 0 -font "Source Code Pro 8" -padding 200 -separator-style solid
